<Window x:Class="FoodDeliveryApp.PaymentGatewayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Gateway" Height="395" Width="426"
        WindowStartupLocation="CenterScreen" Background="White">
    <Grid Margin="25">
        <StackPanel Margin="0,0,0,-16">
            <TextBlock Text="Payment Gateway" FontSize="22" FontWeight="Bold" Foreground="#2D8CFF" Margin="0 0 0 18" HorizontalAlignment="Center"/>

            <TextBlock Text="Card Number:" Margin="0 0 0 4"/>
            <TextBox x:Name="txtCard" Margin="0 0 0 12" Height="32" FontSize="16" />

            <TextBlock Text="Card Holder Name:" Margin="0 0 0 4"/>
            <TextBox x:Name="txtHolder" Margin="0 0 0 12" Height="32" FontSize="16" />

            <TextBlock Text="CVV:" Margin="0 0 0 4"/>
            <PasswordBox x:Name="txtCVV" Margin="0 0 0 16" Height="32" FontSize="16" Width="80"/>

            <Button Content="Confirm Payment" Width="180" Height="38" Background="#43A047" Foreground="White" FontWeight="Bold"
                    Click="ConfirmPayment_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
