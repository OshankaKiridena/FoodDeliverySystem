<Window x:Class="FoodDeliveryApp.RestaurantLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Staff Login" Height="430" Width="417"
        WindowStartupLocation="CenterScreen" Background="#FFF5F5F5">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Padding="20" Height="374" VerticalAlignment="Center" Margin="0,0,10,0">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Restaurant Login" FontSize="22" FontWeight="Bold" Foreground="#2D8CFF"
                           Margin="0 0 0 20" TextAlignment="Center"/>

                <TextBlock Text="Username:"/>
                <TextBox x:Name="txtUsername" Height="30" Margin="0 0 0 10"/>

                <TextBlock Text="Password:"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0 0 0 10"/>

                <Button Content="Login" Width="150" Height="35" Background="#2D8CFF" Foreground="White"
                        Click="Login_Click" HorizontalAlignment="Center" Margin="0 10"/>

                <TextBlock x:Name="lblError" Foreground="Red" TextAlignment="Center" Margin="0 10 0 0"/>

                <Button Content="Register as Staff" Width="160" Height="30"
                        Background="#FFEEEEEE" Foreground="Black"
                        Click="Register_Click" HorizontalAlignment="Center" Margin="0 5"/>

                <Button Content="Forgot Password?" Width="160" Height="30"
                        Background="#FFEEEEEE" Foreground="Black"
                        Click="ForgotPassword_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
