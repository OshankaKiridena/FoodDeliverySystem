<Window x:Class="FoodDeliverySystem.OrderForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Place Order" Height="650" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        AllowsTransparency="True" WindowStyle="None">

    <Window.Resources>
        <!-- Reuse the same styles and gradients from MainWindow -->
        <ResourceDictionary Source="/MainWindow.xaml" />
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Border Background="#F8FFFFFF" CornerRadius="25" Margin="40,25,25,20" Padding="30">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.15" ShadowDepth="20" BlurRadius="40"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Order Food" FontSize="28" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <!-- Item Selection -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Select Item:" FontSize="16" Margin="0,0,0,5"/>
                    <ComboBox x:Name="ItemComboBox" FontSize="14" Height="30">
                        <ComboBoxItem Content="Pizza" />
                        <ComboBoxItem Content="Burger" />
                        <ComboBoxItem Content="Pasta" />
                        <ComboBoxItem Content="Sushi" />
                    </ComboBox>
                </StackPanel>

                <!-- Quantity -->
                <StackPanel Orientation="Vertical" Margin="0,0,0,10">
                    <TextBlock Text="Quantity:" FontSize="16" Margin="0,0,0,5"/>
                    <TextBox x:Name="QuantityTextBox" FontSize="14" Height="30"/>
                </StackPanel>

                <!-- Add Button -->
                <Button Content="➕ Add to Order" Style="{StaticResource PrimaryButton}" Click="AddToOrder_Click" Height="45"/>

                <!-- Order Summary -->
                <TextBlock Text="Order Summary:" FontSize="16" Margin="0,20,0,5"/>
                <ListBox x:Name="OrderSummaryListBox" Height="150" FontSize="14"/>

                <!-- Total and Place Order -->
                <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                    <TextBlock x:Name="TotalTextBlock" FontSize="16" FontWeight="Bold" Text="Total: $0.00" Margin="0,0,0,10"/>
                    <Button Content="✅ Place Order" Style="{StaticResource StaffButton}" Click="PlaceOrder_Click" Height="45"/>
                    <Button Content="❌ Cancel" Style="{StaticResource ExitButton}" Click="Cancel_Click" Height="40" Margin="0,10,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="25" Width="35" Height="35" Background="Transparent" BorderBrush="Transparent" Foreground="White" FontSize="18" Cursor="Hand" Click="Cancel_Click"/>
    </Grid>
</Window>
