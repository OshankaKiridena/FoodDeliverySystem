<Window x:Class="FoodDeliveryApp.DeliveryTrackingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delivery Tracking" Height="500" Width="750"
        WindowStartupLocation="CenterScreen" Background="#F4F6F9">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Delivery Management" FontSize="26" FontWeight="Bold" Foreground="#2D8CFF" Margin="0 0 0 20" HorizontalAlignment="Center"/>

            <DataGrid x:Name="dgDeliveries" AutoGenerateColumns="False" Height="300" Margin="0 0 0 10" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Order ID" Binding="{Binding OrderId}" Width="*"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    <DataGridComboBoxColumn Header="Assign Delivery" SelectedItemBinding="{Binding AssignedTo}" Width="150">
                        <DataGridComboBoxColumn.ElementStyle>
                            <Style TargetType="ComboBox">
                                <Setter Property="ItemsSource" Value="{Binding DeliveryStaffList}"/>
                            </Style>
                        </DataGridComboBoxColumn.ElementStyle>
                    </DataGridComboBoxColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Update Status" Width="150" Margin="10" Background="#4CAF50" Foreground="White" Click="UpdateStatus_Click"/>
                <Button Content="Assign Delivery" Width="150" Margin="10" Background="#2196F3" Foreground="White" Click="AssignDelivery_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
