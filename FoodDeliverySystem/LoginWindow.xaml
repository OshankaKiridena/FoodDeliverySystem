<Window x:Class="FoodDeliveryApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Food Delivery System" Height="550" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        AllowsTransparency="True" WindowStyle="None">

    <Window.Resources>
        <!-- Gradient Brushes -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF667EEA" Offset="0"/>
            <GradientStop Color="#FF764BA2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="ButtonGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF4ECDC4" Offset="0"/>
            <GradientStop Color="#FF44A08D" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="LogoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFF6B6B" Offset="0"/>
            <GradientStop Color="#FFEE5A24" Offset="1"/>
        </LinearGradientBrush>

        <!-- Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="12"
                                BorderThickness="0">
                            <Border.Effect>
                                <DropShadowEffect Color="#FF4ECDC4" Opacity="0.3" ShadowDepth="5" BlurRadius="15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF4ECDC4" Opacity="0.6" ShadowDepth="8" BlurRadius="20"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE9ECEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="CaretBrush" Value="#FF2C3E50"/>
            <Setter Property="SelectionBrush" Value="#FF4ECDC4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="0"
                                          VerticalAlignment="Center"
                                          Focusable="False"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF4ECDC4"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF4ECDC4" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#FFE9ECEF"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#FF2C3E50"/>
            <Setter Property="CaretBrush" Value="#FF2C3E50"/>
            <Setter Property="SelectionBrush" Value="#FF4ECDC4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="0"
                                          VerticalAlignment="Center"
                                          Focusable="False"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF4ECDC4"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FF4ECDC4" Opacity="0.3" ShadowDepth="0" BlurRadius="10"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF7F8C8D"/>
            <Setter Property="BorderBrush" Value="#FFBDC3C7"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#FF4ECDC4"/>
                                <Setter Property="Foreground" Value="#FF4ECDC4"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="-1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Grid with Gradient Background -->
    <Grid Background="{StaticResource BackgroundGradient}" Margin="-40,-147,-213,-119">
        <!-- Main Content Container -->
        <Border Background="#F5FFFFFF" 
                CornerRadius="20" 
                Margin="32,50,50,63"
                Padding="40">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="20" BlurRadius="40"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Logo Section -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <!-- Logo Icon -->
                    <Border Width="60" Height="60" 
                            Background="{StaticResource LogoGradient}"
                            CornerRadius="30"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,15">
                        <Border.Effect>
                            <DropShadowEffect Color="#FFFF6B6B" Opacity="0.3" ShadowDepth="10" BlurRadius="20"/>
                        </Border.Effect>
                        <TextBlock Text="🍕" FontSize="24" 
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Top" Margin="11,12,0,0"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock Text="Welcome Back!" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="#FF2C3E50" 
                               TextAlignment="Center"
                               Margin="0,0,0,8"/>

                    <!-- Subtitle -->
                    <TextBlock Text="Sign in to your FoodRush account" 
                               FontSize="14" 
                               Foreground="#FF7F8C8D" 
                               TextAlignment="Center"/>
                </StackPanel>

                <!-- Username Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Username" 
                               Margin="0,0,0,8" 
                               Foreground="#FF34495E" 
                               FontWeight="Medium"
                               FontSize="14"/>
                    <TextBox x:Name="txtUsername" 
                             Height="45" 
                             Style="{StaticResource ModernTextBox}"/>
                </StackPanel>

                <!-- Password Field -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Password" 
                               Margin="0,0,0,8" 
                               Foreground="#FF34495E" 
                               FontWeight="Medium"
                               FontSize="14"/>
                    <PasswordBox x:Name="txtPassword" 
                                 Height="45" 
                                 Style="{StaticResource ModernPasswordBox}"/>
                </StackPanel>

                <!-- Error Message -->
                <Border x:Name="ErrorPanel" 
                        Background="#20E74C3C" 
                        BorderBrush="#FFE74C3C" 
                        BorderThickness="4,0,0,0" 
                        CornerRadius="8" 
                        Padding="15,10" 
                        Margin="0,0,0,20"
                        Visibility="Collapsed">
                    <TextBlock x:Name="lblError" 
                               Text="Invalid username or password. Please try again." 
                               Foreground="#FFE74C3C" 
                               TextAlignment="Center" 
                               FontSize="14"/>
                </Border>

                <!-- Login Button -->
                <Button Content="Sign In" 
                        Height="50" 
                        Style="{StaticResource ModernButton}"
                        Click="Login_Click" 
                        Margin="0,0,0,20"/>

                <!-- Secondary Actions -->
                <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button Content="Create Account" 
                            Width="120" 
                            Style="{StaticResource SecondaryButton}"
                            Click="SignUp_Click" 
                            Margin="0,0,10,0"/>
                    <Button Content="Forgot Password?" 
                            Width="130" 
                            Style="{StaticResource SecondaryButton}"
                            Click="ForgotPassword_Click" 
                            Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="✕" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="0,24,51,0" 
                Width="30" 
                Height="30" 
                Background="Transparent" 
                BorderBrush="Transparent" 
                Foreground="White" 
                FontSize="16" 
                Cursor="Hand"
                Click="Close_Click"/>
    </Grid>
</Window>