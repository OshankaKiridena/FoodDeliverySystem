<Window x:Class="FoodDeliveryApp.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="280" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Gradient Background -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667EEA" Offset="0"/>
            <GradientStop Color="#764BA2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Primary Button -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D8CFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.2" ShadowDepth="3" BlurRadius="10"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Border Background="#F8FFFFFF"
                CornerRadius="20"
                Padding="25"
                Margin="30">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.15" ShadowDepth="8" BlurRadius="25"/>
            </Border.Effect>

            <Grid>
                <StackPanel>
                    <!-- Header -->
                    <TextBlock Text="🔒 Forgot Password"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#2D8CFF"
                               Margin="0,0,0,20"
                               TextAlignment="Center"
                               HorizontalAlignment="Center"/>

                    <!-- Email Field -->
                    <TextBlock Text="Enter your registered email:"/>
                    <TextBox x:Name="txtEmail" Height="32" Margin="0,5,0,15"/>

                    <!-- Reset Button -->
                    <Button Content="Reset Password"
                            Style="{StaticResource PrimaryButton}"
                            Click="ResetPassword_Click"/>

                    <!-- Status Message -->
                    <TextBlock x:Name="lblStatus"
                               Foreground="Green"
                               TextAlignment="Center"
                               Margin="0,15,0,0"/>
                </StackPanel>

                <!-- Close Button -->
                <Button Content="✕"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="5"
                        Width="30"
                        Height="30"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Foreground="Gray"
                        FontSize="16"
                        Cursor="Hand"
                        Click="Close_Click"/>
            </Grid>
        </Border>
    </Grid>
</Window>
