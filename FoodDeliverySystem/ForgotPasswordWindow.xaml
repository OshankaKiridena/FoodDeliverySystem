<Window x:Class="FoodDeliveryApp.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="250" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#FFF5F5F5">
    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Padding="20">
            <StackPanel>
                <TextBlock Text="Forgot Password" FontSize="20" FontWeight="Bold" Foreground="#2D8CFF" Margin="0 0 0 20" TextAlignment="Center"/>

                <TextBlock Text="Enter your registered email:"/>
                <TextBox x:Name="txtEmail" Height="30" Margin="0 0 0 10"/>

                <Button Content="Reset Password" Width="150" Height="35"
                        Background="#2D8CFF" Foreground="White"
                        Click="ResetPassword_Click" HorizontalAlignment="Center"/>

                <TextBlock x:Name="lblStatus" Foreground="Green" TextAlignment="Center" Margin="0 15 0 0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
