<Window x:Class="FoodDeliveryApp.RestaurantProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restaurant Profile - FoodFlow Dashboard" Height="720" Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Modern Background Gradient -->
        <LinearGradientBrush x:Key="ModernBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1e3c72" Offset="0"/>
            <GradientStop Color="#2a5298" Offset="0.5"/>
            <GradientStop Color="#0f2027" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Background -->
        <SolidColorBrush x:Key="CardBackground" Color="#FAFBFC"/>

        <!-- Primary Button Style -->
        <Style x:Key="ModernPrimaryButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,12,0"/>
            <Setter Property="MinWidth" Value="130"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect Color="{Binding Background, RelativeSource={RelativeSource TemplatedParent}}" 
                                                  Opacity="0.3" ShadowDepth="0" BlurRadius="12"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,6,0,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="False" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4F46E5"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Multiline TextBox Style -->
        <Style x:Key="ModernMultilineTextBox" BasedOn="{StaticResource ModernTextBox}" TargetType="TextBox">
            <Setter Property="Height" Value="80"/>
            <Setter Property="AcceptsReturn" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#1F2937"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#EF4444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F9FAFB"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="CanUserResizeRows" Value="False"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="RowHeight" Value="45"/>
        </Style>

        <!-- DataGrid Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ContentPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                            Margin="{TemplateBinding Padding}"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#EEF2FF"/>
                    <Setter Property="Foreground" Value="#4F46E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource ModernBackgroundGradient}">
        <!-- Main Content Card -->
        <Border Background="{StaticResource CardBackground}" 
                CornerRadius="24" 
                Margin="25" 
                Padding="35">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="0" BlurRadius="30"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <!-- Header Section -->
                    <Grid Margin="0,0,0,30">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <!-- Restaurant Icon and Title -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <Border Width="50" Height="50" 
                                        Background="#4F46E5" 
                                        CornerRadius="12"
                                        Margin="0,0,15,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#4F46E5" Opacity="0.3" ShadowDepth="0" BlurRadius="15"/>
                                    </Border.Effect>
                                    <TextBlock Text="🍽️" 
                                               FontSize="24" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock x:Name="lblRestaurant"
                                               Text="Restaurant Dashboard"
                                               FontSize="28"
                                               FontWeight="Bold"
                                               Foreground="#1F2937"/>
                                    <TextBlock Text="Manage your restaurant profile and menu items"
                                               FontSize="14"
                                               Foreground="#6B7280"/>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>

                        <!-- Close Button -->
                        <Button Grid.Column="1"
                                Content="×"
                                Style="{StaticResource CloseButton}"
                                Click="Close_Click"
                                VerticalAlignment="Top"/>
                    </Grid>

                    <!-- Main Content Grid -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.2*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="0.8*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Panel - Restaurant & Menu Item Form -->
                        <StackPanel Grid.Column="0">
                            <!-- Restaurant Info Section -->
                            <Border Background="White" 
                                    CornerRadius="16" 
                                    Padding="24"
                                    Margin="0,0,0,20">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="0" BlurRadius="20"/>
                                </Border.Effect>

                                <StackPanel>
                                    <TextBlock Text="🏪 Restaurant Information" 
                                               Style="{StaticResource SectionHeader}"/>

                                    <TextBlock Text="Restaurant Name" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtRestaurantName" 
                                             Style="{StaticResource ModernTextBox}"
                                             Tag="Enter your restaurant name"/>

                                    <TextBlock Text="Restaurant Details" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtRestaurantDetails" 
                                             Style="{StaticResource ModernMultilineTextBox}"
                                             Tag="Describe your restaurant"/>
                                </StackPanel>
                            </Border>

                            <!-- Menu Item Form Section -->
                            <Border Background="White" 
                                    CornerRadius="16" 
                                    Padding="24">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="0" BlurRadius="20"/>
                                </Border.Effect>

                                <StackPanel>
                                    <TextBlock Text="🍕 Add Menu Item" 
                                               Style="{StaticResource SectionHeader}"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Item Name" Style="{StaticResource ModernLabel}"/>
                                            <TextBox x:Name="txtItemName" 
                                                     Style="{StaticResource ModernTextBox}"
                                                     Tag="e.g., Margherita Pizza"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Price ($)" Style="{StaticResource ModernLabel}"/>
                                            <TextBox x:Name="txtPrice" 
                                                     Style="{StaticResource ModernTextBox}"
                                                     Tag="0.00"/>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="Description" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="txtDescription" 
                                             Style="{StaticResource ModernMultilineTextBox}"
                                             Tag="Describe your menu item"/>

                                    <!-- Action Buttons -->
                                    <StackPanel Orientation="Horizontal" 
                                                HorizontalAlignment="Left" 
                                                Margin="0,20,0,0">
                                        <Button Content="➕ Add Item"
                                                Click="AddMenuItem_Click"
                                                Background="#10B981"
                                                Style="{StaticResource ModernPrimaryButton}"/>
                                        <Button Content="✏️ Update Selected"
                                                Click="UpdateMenuItem_Click"
                                                Background="#F59E0B"
                                                Style="{StaticResource ModernPrimaryButton}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Right Panel - Image Upload -->
                        <StackPanel Grid.Column="2">
                            <Border Background="White" 
                                    CornerRadius="16" 
                                    Padding="24"
                                    HorizontalAlignment="Stretch">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="0" BlurRadius="20"/>
                                </Border.Effect>

                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="📸 Item Image" 
                                               Style="{StaticResource SectionHeader}"
                                               HorizontalAlignment="Center"/>

                                    <!-- Image Preview -->
                                    <Border Width="200" 
                                            Height="200" 
                                            Background="#F3F4F6" 
                                            CornerRadius="12" 
                                            Margin="0,0,0,16"
                                            BorderBrush="#E5E7EB"
                                            BorderThickness="2">
                                        <Grid>
                                            <Image x:Name="imgPreview" 
                                                   Stretch="UniformToFill"
                                                   ClipToBounds="True"/>
                                            <StackPanel HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"
                                                        x:Name="PlaceholderPanel">
                                                <TextBlock Text="📷" 
                                                           FontSize="32" 
                                                           HorizontalAlignment="Center"
                                                           Foreground="#9CA3AF"/>
                                                <TextBlock Text="No Image" 
                                                           FontSize="14" 
                                                           Foreground="#6B7280"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,8,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <Button Content="📁 Upload Image"
                                            Click="UploadImage_Click"
                                            Background="#6366F1"
                                            Style="{StaticResource ModernPrimaryButton}"
                                            HorizontalAlignment="Center"
                                            Margin="0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Menu Items Table Section -->
                    <Border Background="White" 
                            CornerRadius="16" 
                            Padding="24"
                            Margin="0,30,0,0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="0" BlurRadius="20"/>
                        </Border.Effect>

                        <StackPanel>
                            <TextBlock Text="📋 Current Menu Items" 
                                       Style="{StaticResource SectionHeader}"/>

                            <Border CornerRadius="12" 
                                    BorderBrush="#E5E7EB" 
                                    BorderThickness="1">
                                <DataGrid x:Name="dataGridMenu"
                                          Height="250"
                                          Style="{StaticResource ModernDataGrid}"
                                          SelectionChanged="dataGridMenu_SelectionChanged"
                                          AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Item Name" 
                                                            Binding="{Binding ItemName}" 
                                                            Width="*" 
                                                            MinWidth="150"/>
                                        <DataGridTextColumn Header="Price" 
                                                            Binding="{Binding Price, StringFormat='{}{0:C}'}" 
                                                            Width="100"/>
                                        <DataGridTextColumn Header="Description" 
                                                            Binding="{Binding Description}" 
                                                            Width="2*" 
                                                            MinWidth="200"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>

                            <TextBlock Text="💡 Select an item from the table above to edit its details"
                                       FontSize="12"
                                       Foreground="#6B7280"
                                       FontStyle="Italic"
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>