<Window x:Class="FoodDeliveryApp.RestaurantProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restaurant Profile" Height="550" Width="650"
        WindowStartupLocation="CenterScreen" Background="#FFF5F5F5">

    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" Padding="20" BorderBrush="Gray" BorderThickness="1" Margin="0,0,-16,-20">
            <StackPanel>
                <TextBlock x:Name="lblRestaurant" FontSize="22" FontWeight="Bold" Foreground="#2D8CFF" Margin="0 0 0 20"/>

                <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                    <StackPanel Width="250">
                        <TextBlock Text="Item Name:"/>
                        <TextBox x:Name="txtItemName" Margin="0 0 0 5"/>

                        <TextBlock Text="Price:"/>
                        <TextBox x:Name="txtPrice" Margin="0 0 0 5"/>

                        <TextBlock Text="Description:"/>
                        <TextBox x:Name="txtDescription" Height="60" AcceptsReturn="True" Margin="0 0 0 5"/>

                        <Button Content="Upload Image" Width="120" Click="UploadImage_Click" Margin="0 10 0 0"/>
                    </StackPanel>

                    <Image x:Name="imgPreview" Height="120" Width="120" Margin="20 0 0 0" Stretch="UniformToFill"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0 10 0 10">
                    <Button Content="Add Menu Item" Width="130" Background="Green" Foreground="White" Click="AddMenuItem_Click" Margin="0 0 10 0"/>
                    <Button Content="Update Selected" Width="130" Background="#FFA500" Foreground="White" Click="UpdateMenuItem_Click"/>
                </StackPanel>

                <TextBlock Text="Current Menu:" FontWeight="Bold" Margin="0 10 0 5"/>
                <DataGrid x:Name="dataGridMenu" Height="200" AutoGenerateColumns="False" CanUserAddRows="False" SelectionMode="Single" SelectionChanged="dataGridMenu_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Item" Binding="{Binding ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
