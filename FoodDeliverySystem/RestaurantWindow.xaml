<Window x:Class="FoodDeliveryApp.RestaurantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Available Restaurants" Height="550" Width="700"
        WindowStartupLocation="CenterScreen" Background="#F7F9FB">
    <Border Margin="20" Padding="20" Background="White" CornerRadius="12" BorderBrush="#D3D3D3" BorderThickness="1">
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0 0 0 15" HorizontalAlignment="Center">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="" FontSize="26" Foreground="#2D8CFF" Margin="0 0 10 0" />
                <TextBlock Text="Registered Restaurants" FontSize="24" FontWeight="Bold" Foreground="#2D8CFF"/>
            </StackPanel>

            <ListView x:Name="lvRestaurants" Margin="0" Height="420" Background="#FAFAFA" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Restaurant Name" Width="250" DisplayMemberBinding="{Binding Name}" />
                        
                        <GridViewColumn Header="Description" Width="220" DisplayMemberBinding="{Binding Description}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
    </Border>
</Window>
