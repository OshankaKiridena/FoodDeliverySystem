<Window x:Class="FoodDeliveryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Food Delivery System" Height="440" Width="471"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="295" Height="308" >
            <TextBlock Text="Welcome to Food Delivery App" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#2D8CFF" TextAlignment="Center" Margin="0 0 0 20"/>
            <!-- Top-left Staff Login Button -->
            <Button Content="Staff Login"
                HorizontalAlignment="Left"
                
                Margin="50"
                Padding="10,5"
                Background="#2D8CFF"
                Foreground="White"
                FontWeight="Bold"
                Click="StaffLogin_Click" Height="32" Width="83" RenderTransformOrigin="0.789,0.649"/>

            <Button Content="Login" Height="35" Background="#2D8CFF" Foreground="White"
                    Click="Login_Click" />

            
            <!--
            <Button Content="Restaurants" Height="35" Background="#2D8CFF" Foreground="White"
                    Click="Restaurants_Click" />-->

            <Button Content="Exit" Height="35" Background="Gray" Foreground="White"
                    Click="Exit_Click" />
        </StackPanel>
    </Grid>
</Window>
