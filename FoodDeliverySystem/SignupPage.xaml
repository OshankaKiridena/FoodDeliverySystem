<Window x:Class="FoodDeliveryApp.SignupPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up - Food Delivery System" Height="500" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid Margin="20">
        <Border Background="White" CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Padding="20">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Create an Account" FontSize="20" FontWeight="Bold" Foreground="#FF2D8CFF" Margin="0 0 0 20" TextAlignment="Center"/>

                <TextBlock Text="Full Name:" Margin="0 5 0 0"/>
                <TextBox x:Name="txtFullName" Height="30" Margin="0 0 0 10" />

                <TextBlock Text="Username:" Margin="0 5 0 0"/>
                <TextBox x:Name="txtUsername" Height="30" Margin="0 0 0 10" />
                <TextBlock Text="Address:" Margin="0 5 0 0"/>
                <TextBox x:Name="txtAddress" Height="30" Margin="0 0 0 10" />

                <TextBlock Text="Password:" Margin="0 5 0 0"/>
                <PasswordBox x:Name="txtPassword" Height="30" Margin="0 0 0 10"/>

                <TextBlock Text="Confirm Password:" Margin="0 5 0 0"/>
                <PasswordBox x:Name="txtConfirmPassword" Height="30" Margin="0 0 0 10"/>

                <Button Content="Sign Up" Width="100" Height="35" Background="#FF2D8CFF" Foreground="White"
                        Click="SignUp_Click" HorizontalAlignment="Center" Margin="0 10 0 0"/>

                <TextBlock x:Name="lblMessage" Text="" Foreground="Red" TextAlignment="Center" Margin="0 10 0 0"/>
               
            </StackPanel>
        </Border>
    </Grid>
</Window>

