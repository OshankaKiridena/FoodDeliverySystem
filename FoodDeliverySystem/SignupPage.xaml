<Window x:Class="FoodDeliveryApp.SignupPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up - Food Delivery System" Height="520" Width="420"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Background Gradient -->
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF667EEA" Offset="0"/>
            <GradientStop Color="#FF764BA2" Offset="1"/>
        </LinearGradientBrush>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#2D8CFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" Opacity="0.25" ShadowDepth="4" BlurRadius="8"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource BackgroundGradient}">
        <Border Background="#F8FFFFFF" 
                CornerRadius="20" 
                Padding="25" 
                Width="360" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.15" ShadowDepth="10" BlurRadius="25"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center">

                <!-- Header -->
                <TextBlock Text="Create an Account" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Foreground="#2D8CFF" 
                           Margin="0,0,0,20" 
                           TextAlignment="Center"/>

                <!-- Input Fields -->
                <TextBlock Text="Full Name:"/>
                <TextBox x:Name="txtFullName" Height="30" Width="250" Margin="0,0,0,10"/>

                <TextBlock Text="Username:"/>
                <TextBox x:Name="txtUsername" Height="30" Width="250" Margin="0,0,0,10"/>

                <TextBlock Text="Address:"/>
                <TextBox x:Name="txtAddress" Height="30" Width="250" Margin="0,0,0,10"/>

                <TextBlock Text="Password:"/>
                <PasswordBox x:Name="txtPassword" Height="30" Width="250" Margin="0,0,0,10"/>

                <TextBlock Text="Confirm Password:"/>
                <PasswordBox x:Name="txtConfirmPassword" Height="30" Width="250" Margin="0,0,0,10"/>

                <!-- Submit Button -->
                <Button Content="Sign Up" 
                        Style="{StaticResource PrimaryButton}" 
                        Click="SignUp_Click"
                        HorizontalAlignment="Center"/>

                <!-- Message -->
                <TextBlock x:Name="lblMessage" 
                           Foreground="Red" 
                           TextAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

        <!-- Close Button -->
        <Button Content="✕" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="15" 
                Width="30" 
                Height="30" 
                Background="Transparent" 
                BorderBrush="Transparent" 
                Foreground="White" 
                FontSize="16" 
                Cursor="Hand"
                Click="Close_Click"/>
    </Grid>
</Window>
