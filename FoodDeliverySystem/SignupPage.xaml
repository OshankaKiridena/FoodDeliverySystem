<Window x:Class="FoodDeliveryApp.SignupPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join FoodFlow - Create Account" Height="620" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent">

    <Window.Resources>
        <!-- Modern Background Gradient -->
        <LinearGradientBrush x:Key="ModernBackgroundGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1e3c72" Offset="0"/>
            <GradientStop Color="#2a5298" Offset="0.5"/>
            <GradientStop Color="#0f2027" Offset="1"/>
        </LinearGradientBrush>

        <!-- Card Background with Glass Effect -->
        <SolidColorBrush x:Key="CardBackground" Color="#FAFBFC"/>

        <!-- Primary Button Style -->
        <Style x:Key="ModernPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#4F46E5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="12">
                            <Border.Effect>
                                <DropShadowEffect Color="#4F46E5" Opacity="0.3" ShadowDepth="0" BlurRadius="15"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#6366F1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3730A3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="False" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4F46E5"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern PasswordBox Style -->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Focusable="False" 
                                        HorizontalScrollBarVisibility="Hidden" 
                                        VerticalScrollBarVisibility="Hidden"
                                        Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#4F46E5"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="ModernLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,15,0,0"/>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="17.5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource ModernBackgroundGradient}">
        <!-- Main Card -->
        <Border Background="{StaticResource CardBackground}" 
                CornerRadius="24" 
                Padding="40,35" 
                Width="420" 
                MaxHeight="580"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="0" BlurRadius="30"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <StackPanel HorizontalAlignment="Center">
                    <!-- Header Section -->
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,25">
                        <!-- App Logo/Icon -->
                        <Ellipse Width="60" Height="60" Fill="#4F46E5" Margin="0,0,0,15">
                            <Ellipse.Effect>
                                <DropShadowEffect Color="#4F46E5" Opacity="0.3" ShadowDepth="0" BlurRadius="20"/>
                            </Ellipse.Effect>
                        </Ellipse>

                        <TextBlock Text="Join FoodRush" 
                                   FontSize="28" 
                                   FontWeight="Bold" 
                                   Foreground="#1F2937" 
                                   TextAlignment="Center"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Create your account to get started" 
                                   FontSize="14" 
                                   Foreground="#6B7280" 
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Form Fields -->
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Full Name" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtFullName" 
                                 Style="{StaticResource ModernTextBox}"
                                 Tag="Enter your full name"/>

                        <TextBlock Text="Username" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtUsername" 
                                 Style="{StaticResource ModernTextBox}"
                                 Tag="Choose a unique username"/>

                        <TextBlock Text="Address" Style="{StaticResource ModernLabel}"/>
                        <TextBox x:Name="txtAddress" 
                                 Style="{StaticResource ModernTextBox}"
                                 Tag="Your delivery address"/>

                        <TextBlock Text="Password" Style="{StaticResource ModernLabel}"/>
                        <PasswordBox x:Name="txtPassword" 
                                     Style="{StaticResource ModernPasswordBox}"/>

                        <TextBlock Text="Confirm Password" Style="{StaticResource ModernLabel}"/>
                        <PasswordBox x:Name="txtConfirmPassword" 
                                     Style="{StaticResource ModernPasswordBox}"/>

                        <!-- Terms and Conditions -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,20,0,0">
                            <CheckBox x:Name="chkTerms" 
                                      VerticalAlignment="Center"
                                      Margin="0,0,8,0"/>
                            <TextBlock Text="I agree to the " 
                                       FontSize="12" 
                                       Foreground="#6B7280" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="Terms &amp; Conditions" 
                                       FontSize="12" 
                                       Foreground="#4F46E5" 
                                       TextDecorations="Underline" 
                                       Cursor="Hand"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Submit Button -->
                        <Button Content="Create Account" 
                                Style="{StaticResource ModernPrimaryButton}" 
                                Click="SignUp_Click"
                                HorizontalAlignment="Center"/>

                        <!-- Login Link -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Margin="0,20,0,0">
                            <TextBlock Text="Already have an account? " 
                                       FontSize="13" 
                                       Foreground="#6B7280"/>
                            <TextBlock Text="Sign In" 
                                       FontSize="13" 
                                       Foreground="#4F46E5" 
                                       FontWeight="Medium"
                                       TextDecorations="Underline" 
                                       Cursor="Hand"/>
                        </StackPanel>

                        <!-- Message Display -->
                        <Border x:Name="MessageBorder" 
                                Background="#FEF2F2" 
                                BorderBrush="#FECACA" 
                                BorderThickness="1" 
                                CornerRadius="8" 
                                Padding="12,8" 
                                Margin="0,15,0,0" 
                                Visibility="Collapsed">
                            <TextBlock x:Name="lblMessage" 
                                       Foreground="#DC2626" 
                                       FontSize="13"
                                       TextAlignment="Center" 
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Close Button -->
        <Button Content="×" 
                Style="{StaticResource CloseButton}"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top" 
                Margin="20" 
                Click="Close_Click"/>
    </Grid>
</Window>