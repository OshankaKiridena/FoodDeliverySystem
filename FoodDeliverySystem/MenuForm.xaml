<Window x:Class="FoodDeliverySystem.Views.MenuForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu Management" Height="500" Width="700">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Input Fields -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100" Text="Name:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtName" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100" Text="Description:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtDescription" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100" Text="Price:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtPrice" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBlock Width="100" Text="Category:" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbCategory" Width="200">
                    <ComboBoxItem Content="Main Dish"/>
                    <ComboBoxItem Content="Drink"/>
                    <ComboBoxItem Content="Dessert"/>
                </ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <Button x:Name="btnAdd" Content="Add" Width="80" Margin="5"/>
                <Button x:Name="btnUpdate" Content="Update" Width="80" Margin="5"/>
                <Button x:Name="btnDelete" Content="Delete" Width="80" Margin="5"/>
                <Button x:Name="btnClear" Content="Clear" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>

        <!-- Menu Items List -->
        <DataGrid x:Name="dgMenuItems" Grid.Row="1" AutoGenerateColumns="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="200"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="80"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
